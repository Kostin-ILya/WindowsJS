{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": "off",
    "comma-dangle": ["error", { "functions": "ignore", "objects": "ignore" }],
    "no-param-reassign": ["error", { "props": false }]
    // "one-var-declaration-per-line": ["error", "initializations"]
    // "no-unused-expressions": ["error", { "allowTernary": true }]
  }
}
